{
  "name": "payload-cms",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "start": "nodemon",
    "payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "esbuild --bundle src/server.ts --platform=node --packages=external --format=esm --outfile=dist/server.js",
    "build:payload-config": "esbuild  --bundle src/payload.config.ts --platform=node --packages=external --outfile=dist/payload.config.cjs",
    "migrate": "cross-env NODE_ENV=production PAYLOAD_CONFIG_PATH=src/payload.config.ts payload migrate",
    "migrate:create": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.ts payload migrate:create",
    "serve": "cross-env NODE_ENV=production PAYLOAD_CONFIG_PATH=dist/payload.config.cjs node ./dist/server.js",
    "build": "pnpm run build:server && pnpm run build:payload-config && pnpm run build:payload"
  },
  "dependencies": {
    "@payloadcms/bundler-vite": "^0.1.7",
    "@payloadcms/db-postgres": "^0.8.6",
    "@payloadcms/richtext-slate": "^1.5.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "payload": "^2.28.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "babel-loader": "^9.1.3",
    "esbuild": "^0.23.1",
    "node-loader": "^2.0.0",
    "nodemon": "^3.1.4",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "webpack-node-externals": "^3.0.0"
  }
}
